          }
        },
        "additionalProperties": false
      },
      "SyncRequest": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SyncItemRequest"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SyncResult": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "syncedItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SyncItem"
            },
            "nullable": true
